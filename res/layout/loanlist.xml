<?xml version="1.0" encoding="utf-8"?>

    <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:stretchColumns="0" android:gravity="center_vertical">
        <TableRow
                android:layout_width="0dip"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="0dip"
                    android:id="@+id/tvName" android:text="Name" android:textSize="16sp" android:layout_column="0"
                    android:singleLine="false" android:gravity="center_vertical|left"/>
            <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:id="@+id/tvSum" android:text="Sum" android:textSize="16sp" android:layout_column="1"
                    android:gravity="center_vertical|right" android:paddingLeft="20dip"/>
        </TableRow>
    </TableLayout>